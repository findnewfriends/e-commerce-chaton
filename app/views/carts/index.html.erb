<p id="notice"><%= notice %></p>

<div class="container text-center">

   <div class="card shopping-cart">

            <div class="card-header" id="headerCard">

                <p class="my-3"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Shopping Cart</p>
                <!-- <%= link_to "Back", items_path, class:"btn btn-outline-info btn-sm pull-right mb-2 " %> -->

                <div class="clearfix"></div>
            </div>
            <% @carts.each do |cart| %>
            <div class="card-body border border-light">
                    <!-- PRODUCT -->
                    <div class="row">

                        <div class="col-12 col-sm-12 col-md-2 text-center">
                            <%# <img class="img-responsive" src="http://placehold.it/120x80" alt="prewiew" width="120" height="80"> %>
                            <%= image_tag("kitten.jpg", id:"imageKitten", class: " img-responsive ", width: "125px", height: "100px", alt:"...") %>
                        </div>

                        <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                            <h4 class="product-name"><strong><%= cart.item.name %></strong></h4>
                            <h6 class="text-secondary">
                                <small><%= cart.item.description.truncate(160) %></small>
                            </h6>
                        </div>
                        <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                            <div class="col-3 col-sm-3 col-md-6 text-md-right d-flex align-items-center" style="padding-top: 5px">
                                <h6><strong>â‚¬ <%= Item.find(cart.item_id).price %>/license <span class="text-muted"> x</span></strong></h6>
                            </div>
                            <div class="col-4 col-sm-4 col-md-4 d-flex align-items-center">
                                <div class="quantity p-1">
                                    <%= cart.quantity %>
                                </div>
                            </div>
                            <div class="col-2 col-sm-2 col-md-2 text-right d-flex align-items-center">
                              <a class='btn btn-outline-danger' href='<%= cart_path(cart.id) %>' data-confirm='Are you sure?' data-method='DELETE'><i class='fas fa-trash'></i></a>                            </div>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <!-- <hr> -->
                    <!-- END PRODUCT -->
            </div>
            <div class="card-footer d-flex justify-content-end">



      <!-- STRIPE CODE -->
      <%= form_tag charges_path do %>
      <article>
          <% if flash[:error].present? %>
          <div id="error_explanation">
              <p><%= flash[:error] %></p>
          </div>
          <% end %>
          <div class="pull-right" style="margin: 5px">
            Subtotal: <b>$<%= @prices%></b>
          </div>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button " data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="Checkout" data-amount=<%= @prices*100 %> data-locale="auto"></script>

      <!-- replaced stripe default pay button -->
      <button id="" class="btn btn-warning m-1 pull-right" type="submit">Pay Now</button><br>

      <!-- EMD STRIPE CODE -->
      <style media="screen">
          .stripe-button-el {
              display: none
          }
      </style>

    <% end %>
    </div>
</div>
