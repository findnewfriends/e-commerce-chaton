<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
        <% if user_signed_in?%>
          <%= form_for @cart do |f| %>
          <%= f.hidden_field :user, :value => current_user.id if user_signed_in?  %>
          <%= f.hidden_field :item, :value => item.id %>
          <div class="form-group">
            <%= f.label :Qty %><br />
            <%= f.number_field :quantity, :value => 1,  class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "Add to cart" , class: "btn btn-lg btn-primary btn-block" %>
          </div>
          <% end %>
        <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
